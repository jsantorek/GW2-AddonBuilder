[settings]
arch=x86_64
os=Windows
build_type=Release
compiler=clang
compiler.version=19
compiler.cppstd=20
compiler.runtime_type=Release
compiler.runtime_version=v142
compiler.runtime=static

[conf]
tools.build:cxxflags=["-fdiagnostics-color=always -v -Weverything"]
tools.build:cxxflags+=["-Wno-reserved-identifier -Wno-gnu-anonymous-struct -Wno-c++98-compat -Wno-pre-c++20-compat-pedantic -Wno-nonportable-system-include-path"]
tools.build:cxxflags+=["-target x86_64-pc-windows-msvc"]
tools.build:cxxflags+=["-winsdkdir /xwin/sdk"]
tools.build:cxxflags+=["-vctoolsdir /xwin/crt"]
tools.build:compiler_executables={"c": "clang-cl", "cpp": "clang-cl", "rc": "llvm-rc"}
tools.cmake.cmaketoolchain:extra_variables={"CMAKE_MT":"llvm-mt", "CMAKE_LINKER_TYPE":"LLD", "CMAKE_EXPORT_COMPILE_COMMANDS":1}

[buildenv]
LDFLAGS+=/libpath:/xwin/sdk/lib/um/x86_64 /libpath:/xwin/sdk/lib/ucrt/x86_64 /libpath:/xwin/crt/lib/x86_64 /manifest:no
